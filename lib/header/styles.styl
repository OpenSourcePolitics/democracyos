/* Vars
-------------------------------------------------- */
header_height = 64px
spacing = 20px

/* Header
-------------------------------------------------- */
header.app-header
  position fixed

.site-content.content-pinned
aside.nav-proposal.content-pinned
  transition transform 200ms linear
  padding-top 0

.site-content
  z-index 1
  overflow-y auto

header.app-header
  z-index 20
  top 0
  left 0
  right 0
  height header_height
  background #64476e
  color white
  font-weight bold
  text-transform uppercase
  font-size 12px

  &.with-contrast
    box-shadow 0 2px 2px rgba(0, 0, 0, 0.3)

  #toggleButton
    position absolute
    width 64px
    height 64px
    display none
    .bar-icon
      height 3px
      margin-bottom 5px
      display block

  a
     color white
     &:hover
       color white


  a.home, h1
    display inline-block
    vertical-align top
    height 100%
    //border-right 1px solid rgba(255,255,255,0.5)

  a.home, #toggleButton
    width 64px
    text-align center
    font-size 18px
    .fa
      padding-top 22px
      vertical-align middle

  h1
    margin 0
    padding 18px
    a
      font-weight normal
      text-transform initial
      font-size 24px

  img.logo-image
    display inline-block
    max-height 32px

  .user-nav
    display inline-block
    float right
    list-style none
    margin-right spacing
    position absolute
    right 0
    top 0px

    .user
      float right

    .login
      padding 6px 12px
      display inline-block
      margin-top 15px
      line-height 1.8

      i
        display none
        font-size 20px
      &:hover
        text-decoration none

vendors(prop, args, fn = null)
  val = fn == null ? args : fn + '(' + args + ')'
  -moz-{prop} val
  -webkit-{prop} val
  -o-{prop} val
  -ms-{prop} val
  {prop} val

.headroom
  vendors(transition, all 200ms linear)

.headroom--pinned
  vendors(transform, 0%, translateY)

.headroom--unpinned
  vendors(transform, -100%, translateY)
