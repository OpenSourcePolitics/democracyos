#admin-container
  padding-top 40px
  #admin
    #admin-content .heading
      position relative
      margin 10px auto 25px

  .site-embeded &
    position static
    #admin
      min-height 450px
      padding 25px 0 40px

  .btn
    font-weight 600
    letter-spacing .04em
    border 0
    margin 1px 0

  button.sort
    margin-left 5px

  span.sort-label
    margin-right 5px

  .heading
    position relative
    margin 10px auto 25px

    h1
      margin 0
      font-size 14px
      line-height 20px
      text-transform uppercase
      .fa
        margin-left 5px
        margin-right 15px

    .commands
      margin-top 20px

  .actions
    .dropdown-menu
      font-size 13px
      right 15px
      left 15px
      margin 0
      padding 0
      li a
        cursor pointer
        padding 10px 20px
        white-space normal
      li:last-child a
        padding-bottom 14px
    .fa
      font-size 14px
      margin-right 7px
    .btn-label .fa
      margin-right 0

    &.list-group
      margin-bottom 0px
      font-size 13px
      a
        font-weight normal
        cursor pointer
      .fa
        position relative
        top 1px

  .list
    h4
      margin-top 3px
      small
        margin-left 7px

    & > a
      font-weight normal
      &:hover
        color black

    & > .list-group-item
      padding 15

    span.text
      margin-left 5px
      margin-right 10px

    .info
      font-size 14px
      .fa
        width 14px
        text-align center
        margin 0 10px

    .media-object
      width 58px
      border-radius 4px
    .media-body
      padding-left 5px

  .commands

    .btn
      margin-bottom 3px
      margin-right 20px

      &.btn-labeled
        padding-right 20px

@import './forms'
@import './responsive'
@import './error'
