//- Config Color
- var fontFamily = config.fontFamily;
- var myHeaderBackgroundColor = config.headerBackgroundColor;
- var myHeaderFontColor = config.headerFontColor;
- var myFooterBackgroundColor = config.footerBackgroundColor;
- var myFooterFontColor = config.footerFontColor;
- var myHeaderContrast = config.headerContrast ? '0 2px 2px rgba(0, 0, 0, 0.3)' : 'none';
style.
  
  body {
    font-family: !{fontFamily} ;
  }
  
  .header-background-color {
    background-color: !{myHeaderBackgroundColor} ;
  }
  .header-font-color {
    color: !{myHeaderFontColor} ;
  }
  .force-header-background-color {
    background-color: !{myHeaderBackgroundColor} !important ;
  }
  .force-header-font-color {
    color: !{myHeaderFontColor} !important ;
  }
  
  .header-contrast {
    box-shadow: !{myHeaderContrast} ;
  }

  .app-footer {
    background-color: !{myFooterBackgroundColor} ;
    color: !{myFooterFontColor} ;
  }
