#settings-container

  #settings
    position relative
    max-width 700px
    margin 0 auto 50px

    min-height 450px

    .sidebar-container
      position absolute
      width 180px
      padding-left 20px

    .settings-content
      max-width 550px
      min-width 350px
      margin-left 180px
      margin-right auto
      padding 40px 25px
      .site-embeded &
        height auto
    .btn
      font-weight 600
      letter-spacing 0.04em
      margin 5px auto

    .btn,
    input,
    textarea,
    select,
    #button
      border-radius 2px

    input[type="submit"].btn
      font-weight normal
      margin-top 15px

    input[type="checkbox"]
      margin-right 15px

    label
      margin-bottom 10px

    form
      max-width 450px
      .actions
        margin-top: 25px

@media only screen and (min-width  320px) and (max-width  700px)
  //Mobile max width
  #settings-container #settings .settings-content
    min-width 320

@import './sidebar'
@import './heading'
@import './responsive'
